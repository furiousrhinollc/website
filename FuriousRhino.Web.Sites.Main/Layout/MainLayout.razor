@inherits LayoutComponentBase

<FluentLayout>
    <FluentDesignTheme
        CustomColor="#000000"
        @bind-Mode="@currentTheme"
        StorageName="frtheme" />
    <FluentHeader Class="siteheader">
        <a href="/" title="Furious Rhino"><img src="content/logotitle.png" alt="Furious Rhino" class="logo" height="40" /></a>
        <FluentSpacer />
        <FluentButton @onclick="ChangeTheme" @bind-IconStart="@themeIcon">Mode</FluentButton>
    </FluentHeader>
    <FluentStack Class="main" Orientation="Orientation.Horizontal" Width="100%">
        <NavMenu />
        <FluentBodyContent Class="body-content">
            <ErrorBoundary>
                <ChildContent>
                    <div class="content">
                        @Body
                    </div>
                </ChildContent>
                <ErrorContent Context="ex">
                    <div class="blazor-error-boundary">@ex.Message</div>
                </ErrorContent>
            </ErrorBoundary>
        </FluentBodyContent>
    </FluentStack>
    <FluentFooter Class="sitefooter">
        <FluentStack Orientation="Orientation.Horizontal"
            HorizontalAlignment="HorizontalAlignment.Center"
            HorizontalGap="25">

            <FluentAnchor Href="@tikTokLink" target="_blank" Class="fluent-anchor">
                <img src="/content/tiktoklogo.png"
                     alt="Furious Rhino on TikTok"
                     style="max-height:18px;width:auto;" />
            </FluentAnchor>

            <FluentAnchor Href="https://bsky.app/profile/furiousrhino.com" target="_blank" Class="fluent-anchor">
                <img src="/content/blueskylogo.png"
                     alt="Furious Rhino on BlueSky"
                     style="max-height:18px;width:auto;" />
            </FluentAnchor>

            <FluentAnchor Href="@youTubeLink" target="_blank" Class="fluent-anchor">
                <img src="/content/youtubelogo.png"
                     alt="Furious Rhino on YouTube"
                     style="max-height:18px;width:auto;" />
            </FluentAnchor>

            <FluentAnchor Href="https://www.instagram.com/furiousrhino/" target="_blank" Class="fluent-anchor">
                <img src="/content/instagramlogo.png"
                     alt="Furious Rhino on Instagram"
                     style="max-height:18px;width:auto;" />
            </FluentAnchor>

            <FluentAnchor Href="@threadsLink" target="_blank" Class="fluent-anchor">
                <img src="/content/threadslogo.png"
                     alt="Furious Rhino on Threads"
                     style="max-height:18px;width:auto;" />
            </FluentAnchor>

            <FluentAnchor Href="#" Class="fluent-anchor">
                <img src="/content/kickstartersociallogo.png"
                     alt="Furious Rhino on Kickstarter"
                     style="max-height:18px;width:auto;" />
            </FluentAnchor>
        </FluentStack>
    </FluentFooter>
</FluentLayout>

@code {
    private readonly string tikTokLink = "https://www.tiktok.com/@furiousrhino";
    private readonly string youTubeLink = "https://www.youtube.com/@furiousrhinollc";
    private readonly string threadsLink = "https://www.threads.com/@furiousrhino";

    private DesignThemeModes currentTheme = DesignThemeModes.Dark;

    private Icon themeIcon
    {
        get {
            return currentTheme == DesignThemeModes.Dark ? new Icons.Regular.Size24.WeatherSunny() : new Icons.Regular.Size24.WeatherMoon();
        }
        set { }
    }

    private void ChangeTheme()
    {
        currentTheme = currentTheme == DesignThemeModes.Dark ? DesignThemeModes.Light : DesignThemeModes.Dark;
    }
}
